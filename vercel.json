{ 
    "version": 2, 
    "rewrites": [
        { 
            "source": "/(.*)", 
            "destination": "/" 
        }
    ],
    "routes":[
        {
            "src": "/",
            "dest": "public/index.html"
        },
        {
            "src": "/summarize",
            "dest": "/summarize.js"
        }
    ]
}